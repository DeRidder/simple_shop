<!DOCTYPE html>
<html>
  <head>
    <title>SimpleShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <ul class="nav navbar-nav">
        <li class="nav-item">
          <%= link_to "Merken", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Winkelmandje (#{current_cart.order.order_items.sum(:quantity)} items)", order_items_path, class: "nav-link" %>
        </li>
      </ul>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
